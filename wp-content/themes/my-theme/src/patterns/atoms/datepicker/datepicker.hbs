<label class="a-datepicker" data-g-name="Datepicker">
	<span class="a-datepicker__label">{{label}}</span>
	<input type="text" class="a-datepicker__input js-a-datepicker__input"
		aria-label="{{label}}"
		{{#if inputPlaceholder}}placeholder="{{inputPlaceholder}}"{{/if}}
		{{#if dateFormat}}data-date-format="{{dateFormat}}"{{/if}}
		{{#if altFormat}}data-alt-format="{{altFormat}}"{{/if}}
		{{#if defaultDate}}data-default-date="{{defaultDate}}"{{/if}}
	>
</label>
